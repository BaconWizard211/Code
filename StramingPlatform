function myFunction(x) {
    x.classList.toggle("change");

    document.getElementById('menu-toggle').style.display = document.getElementById('menu-toggle').style.display =='block' ?   'none' : 'block';
}





let container = document.querySelectorAll(".text-container");
let text = document.querySelectorAll(".text-container span");

for (let i=0; i<container.length; i++) {
  if (container[i].clientWidth < text[i].clientWidth) {
    text[i].classList.add("animate");
  }
}









