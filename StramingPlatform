  display: flex;
  position: sticky;
  top: 0%;
  z-index: 2;
  flex-direction: column;
  box-sizing: border-box;
}

.wrapper2 {
display: flex;
}

.menu {
  background-color: #555657;
  color: white;
  padding: 10px;
  font-size: 16px;
  border: none;
  position: relative;
  display: inline-block;
  cursor: pointer;
}

.menu:hover .menu-toggle {
  display: block;
}

.menu-toggle a:hover {
  background-color: #a6a6a6;
}

.menu:hover .dropdown-content {
  display: block;
}

.menu:hover .dropbtn {
  background-color: white;
}

.menu-toggle a {
  color: white;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.menu-toggle {
  display: none;
  position: absolute;
  background-color: black;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
  z-index: 1;
}

.bar1, .bar2, .bar3 {
  width: 35px;
  height: 5px;
  background-color: black;
  margin: 6px 0;
  transition: 0.4s;
}

/* Rotate first bar */
.change .bar1 {
  transform: rotate(-45deg) translate(-9px, 6px);
}

/* Fade out the second bar */
.change .bar2 {
